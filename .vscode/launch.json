{
    // VS Code uses JSON with comments (JSONC) هنا فمسموح التعليقات
    "version": "0.2.0",
    "configurations": [
        
        {
            // تشغيل عادي مع Debug (F5)
            "name": "Flutter (Debug)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart"
            // ممكن تضيف "deviceId": "chrome" أو "windows" أو id المحاكي إذا بدك تفرض جهاز معيّن
        },
        {
            // تشغيل بدون Debug (Ctrl+F5)
            "name": "Flutter (Run Without Debug)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "noDebug": true
        },
        {
            // وضع الأداء
            "name": "Flutter (Profile)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            // وضع الإصدار النهائي
            "name": "Flutter (Release)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "release"
        }
    ]
}